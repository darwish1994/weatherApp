<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/asymmetric_card"
    android:layout_margin="@dimen/_25dp"
    android:padding="@dimen/_10dp">

    <ImageView
        android:id="@+id/iv_error"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,193:177"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.63"
        app:srcCompat="@drawable/ic_error"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/cairo_semibold"
        android:gravity="center"
        android:text="@string/someting_wrong"
        android:textColor="@color/rifle_green"
        android:textSize="@dimen/_15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_error" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_error_retry"
        style="@style/FilledButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        android:background="@drawable/bg_hollow_button"
        android:text="@string/retry"
        app:backgroundTint="@color/ocean_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_error"
        app:layout_constraintWidth_percent="0.73" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_error_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        android:background="@drawable/bg_hollow_button"
        android:text="@string/cancel"
        android:textColor="@color/maya_blue"
        app:layout_constraintEnd_toEndOf="@id/btn_error_retry"
        app:layout_constraintStart_toStartOf="@id/btn_error_retry"
        app:layout_constraintTop_toBottomOf="@id/btn_error_retry" />


</androidx.constraintlayout.widget.ConstraintLayout>
